{
    "files.associations": {
        "*.idl": "ignore",
        "*.h": "c",
        "*.c": "c",
    },
    "editor.fontFamily": "JetBrains Mono",
    "editor.fontLigatures": true,
    "editor.lineHeight": 19,
    "editor.rulers": [
        130,
        160
    ],
    "editor.tabSize": 8,
    "editor.detectIndentation": false,
    "editor.indentSize": 4,
    "editor.insertSpaces": true,
    "files.insertFinalNewline": true,
    
    "clangd.arguments": [
        "-header-insertion=never"
    ],
}
